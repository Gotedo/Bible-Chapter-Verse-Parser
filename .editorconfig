# EditorConfig helps maintain consistent coding styles
# http://editorconfig.org

root = true

[*.{go,mod,sum}]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = tab
insert_final_newline = true
trim_trailing_whitespace = false

[*.md]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = false

[*.{yml,yaml,json,xml,sh}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{txt,md}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{js,ts,jsx,tsx,css,scss,html}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
